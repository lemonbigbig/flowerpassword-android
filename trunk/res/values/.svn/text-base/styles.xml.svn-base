<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Sherlock.Light.DarkActionBar" parent="Theme.Sherlock.Light"></style>
    <style name="Theme.FlowerPassword" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowBackground">@color/minor</item>
        <item name="abBackground">@color/major</item>
        <item name="abTitleTextStyle">@style/TextAppearance.Widget.Title.FlowerPassword</item>
        <item name="abIcon">@drawable/ic_home</item>
        <item name="actionMenuTextColor">@color/action_bar_text</item>
    </style>

    <style name="TextAppearance.Widget.Title.FlowerPassword" parent="@style/TextAppearance.Widget.Title">
        <item name="android:textColor">@color/action_bar_text</item>
    </style>

    <style name="Widget.FlowerPassword.ScrollView" parent="">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="Widget.FlowerPassword.LinearLayout" parent="">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.FlowerPassword.LinearLayout.Main" parent="Widget.FlowerPassword.LinearLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">@dimen/main_padding_width</item>
        <item name="android:paddingRight">@dimen/main_padding_width</item>
    </style>

    <style name="Widget.FlowerPassword.LinearLayout.Line" parent="Widget.FlowerPassword.LinearLayout">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Widget.FlowerPassword.LinearLayout.Section" parent="Widget.FlowerPassword.LinearLayout.Line">
        <item name="android:paddingTop">@dimen/section_padding_height</item>
        <item name="android:paddingBottom">@dimen/section_padding_height</item>
    </style>

    <style name="Widget.FlowerPassword.LinearLayout.Hint" parent="Widget.FlowerPassword.LinearLayout.Section">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.FlowerPassword.TextView" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Widget.FlowerPassword.TextView.Section" parent="Widget.FlowerPassword.TextView">
        <item name="android:textSize">@dimen/section_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.FlowerPassword.TextView.Section.Number" parent="Widget.FlowerPassword.TextView.Section">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:background">@color/major</item>
        <item name="android:textColor">@color/minor</item>
    </style>

    <style name="Widget.FlowerPassword.TextView.Section.Title" parent="Widget.FlowerPassword.TextView.Section">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textColor">@color/major</item>
    </style>

    <style name="Widget.FlowerPassword.TextView.Label" parent="Widget.FlowerPassword.TextView">
        <item name="android:paddingRight">10dip</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/label_text</item>
    </style>

    <style name="Widget.FlowerPassword.TextView.Plus" parent="Widget.FlowerPassword.TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/plus_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/major</item>
        <item name="android:text">@string/label_plus</item>
    </style>

    <style name="Widget.FlowerPassword.TextView.Hint" parent="Widget.FlowerPassword.TextView">
        <item name="android:textSize">@dimen/hint_text_size</item>
        <item name="android:textColor">@color/hint_text</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Widget.FlowerPassword.EditText" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/content_text_size</item>
        <item name="android:textColor">@color/edit_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Widget.FlowerPassword.EditText.Input" parent="Widget.FlowerPassword.EditText">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="Widget.FlowerPassword.EditText.Input.Password" parent="Widget.FlowerPassword.EditText.Input">
        <item name="android:inputType">textPassword</item>
        <item name="android:password">true</item>
    </style>

    <style name="Widget.FlowerPassword.EditText.Input.Key" parent="Widget.FlowerPassword.EditText.Input">
        <item name="android:inputType">text</item>
    </style>

    <style name="Widget.FlowerPassword.EditText.Output.Result" parent="Widget.FlowerPassword.EditText">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/result</item>
        <item name="android:inputType">none</item>
        <item name="android:editable">false</item>
    </style>

    <style name="Widget.FlowerPassword.RelativeLayout.Copy" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="Widget.FlowerPassword.Button.Copy" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingLeft">@dimen/button_padding_width</item>
        <item name="android:paddingRight">@dimen/button_padding_width</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/copy_button</item>
        <item name="android:textColor">@color/minor</item>
        <item name="android:textSize">@dimen/content_text_size</item>
    </style>

</resources>