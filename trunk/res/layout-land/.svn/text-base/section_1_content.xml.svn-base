<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.FlowerPassword.LinearLayout.Line" >

    <EditText
        android:id="@+id/edit_password"
        style="@style/Widget.FlowerPassword.EditText.Input.Password"
        android:hint="@string/label_password" >
        <requestFocus />
    </EditText>

    <TextView style="@style/Widget.FlowerPassword.TextView.Plus.Land" />

    <com.fpassword.android.InstantAutoCompleteTextView
        android:id="@+id/edit_key"
        style="@style/Widget.FlowerPassword.EditText.Input.Key"
        android:hint="@string/label_key" />

</LinearLayout>